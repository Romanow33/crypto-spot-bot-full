# ============================================================================
# CONFIGURACIÓN DEL BOT DE TRADING CRIPTO - EJEMPLO ACTUALIZADO
# ============================================================================
# NOTA: Nunca commits las claves reales! Solo usa en .env local
# ============================================================================

# BINANCE API KEYS (Testnet - DEV)
# Obtén en: https://testnet.binance.vision
BINANCE_API_KEY_DEV=
BINANCE_API_SECRET_DEV=

# BINANCE API KEYS (Mainnet - PROD - NO USES EN DEV!)
# Obtén en: https://www.binance.com/en/account/api-management
# NUNCA subas claves reales a git
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ============================================================================
# MODO DE EJECUCIÓN
# ============================================================================
# MODE: dev (testnet) o prod (mainnet real)
MODE=dev

# DRY: none (real), log (solo imprime), sim (simulador interno)
DRY=sim

# ============================================================================
# CONFIGURACIÓN DE TRADING
# ============================================================================
SYMBOL=BTCUSDT
TIMEFRAME=5m

# Porcentaje del balance a usar por trade (1% = 0.01)
TRADE_PERCENT=0.01 (float)

# Tasa de comisión por trade (Binance: 0.06% taker, 0.04% maker)
TRADE_FEE_RATE=0.0006 (float)

# Monto mínimo base para un trade (USDT)
MIN_BASE_USDT=5.0 (float)

# Margen mínimo adicional después de fees
MIN_MARGIN_USDT=1.0 (float)

# Margen de seguridad para slippage (1.02 = 2% buffer)
SAFETY_MARGIN=1.02 (float)

# USDT fallback si 1% es muy pequeño
FALLBACK_USDT=7.0 (float)

# ============================================================================
# MODELO MACHINE LEARNING
# ============================================================================
MODEL_PATH=./models/model.pkl (string)

# ============================================================================
# BASE DE DATOS
# ============================================================================
SQLITE_PATH=./db/repo.sqlite (string)

# ============================================================================
# DATOS HISTÓRICOS
# ============================================================================
START_DATE=2024-01-01 (string)
HISTORICAL_DAYS=365 (float)

# ============================================================================
# CONFIGURACIÓN DE FEES (Informativa)
# ============================================================================
FEE_TAKER=0.0006 (float)
FEE_MAKER=0.0004 (float)
SLIPPAGE=0.001 (float)

# ============================================================================
# LOGGING (Automático con nuevo sistema)
# ============================================================================
# Los logs se guardan en logs/ con formato:
# YYYY-MM-DD_TEST|PROD_dev|prod.log
# Ejemplo: 2025-10-08_TEST_DEV.log

# ============================================================================
# RISK MANAGEMENT
# ============================================================================
# Stop loss por trade
STOP_LOSS_PERCENT=0.01 (float)
# Take profit (opcional)  
TAKE_PROFIT_PERCENT=0.02 (float)

# ============================================================================
# STRATEGY PARAMETERS - RSI(2) Mean Reversion
# ============================================================================
# Niveles de RSI(2) para compra/venta (más estrictos)
RSI2_BUY_LEVEL=5 (float)
RSI2_SELL_LEVEL=95 (float)
# Usar filtro de tendencia (SMA200)
USE_TREND_FILTER=true (boolean)
# Usar ML scorer como filtro adicional
USE_ML_FILTER=false (boolean)
# Threshold mínimo para señales ML (0-1)
ML_THRESHOLD=0.4 (float)

# ============================================================================
# MAKER ORDERS (LIMIT)
# ============================================================================
# Usar órdenes MAKER en vez de MARKET (reduce fees de 0.06% a 0.04%)
USE_MAKER_ORDERS=true (boolean)
# Segundos de espera antes de cancelar y usar MARKET
MAKER_WAIT_SECONDS=5.0 (float)
# Offset de precio para ser maker (0.0005 = 0.05% mejor que mercado)
MAKER_PRICE_OFFSET=0.0005 (float)

# ============================================================================
# GRID TRADING PARAMETERS
# ============================================================================
# Rango del grid como % del precio actual (0.05 = ±5%)
GRID_RANGE_PCT=0.05 (float)
# Número de niveles en el grid
GRID_LEVELS=10 (boolean)
# USDT a invertir por cada nivel del grid
GRID_INVESTMENT_PER_LEVEL=10.0(float)
